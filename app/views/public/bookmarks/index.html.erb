<%= render 'public/users/info', user: current_user %>

<div class="container">
  <div class="row">
    <div class="col text-center">
      <%= link_to user_path(current_user), class: "btn btn-sm text-secondary" do %>
        <i class="fas fa-shoe-prints"></i>投稿
      <% end %>
      |
      <%= link_to user_bookmarks_path(current_user), class: "btn btn-sm" do %>
        <i class="fas fa-bookmark"></i>ブックマーク
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="card-group py-3">
      <% @bookmarked_posts.each do |bookmark| %>
        <div class="col-4">
          <div class="card w-100 mx-auto mt-4 shadow-lg">
            <%= link_to post_path(bookmark.post.id) do %>
              <%= image_tag bookmark.post.get_post_image(1000, 1000), class:"card-img-top"; %>
            <% end %>
            <div class="card-body">
              <div class="row">
                <div class="col-2">
                  <%= image_tag bookmark.post.user.get_profile_image(50, 50), class:"mt-3 rounded-circle"; %>
                </div>
                <div class="col-10">
                  <p class="card-title">
                    <%= link_to(post_path(bookmark.post.id), class:"text-dark") do %>
                      <strong><i class="far fa-flag"></i><span> <%= bookmark.post.title %></span></strong>
                    <% end %>
                  </p>
                  <p class="card-text">説明：<%= bookmark.post.caption %></p>
                  <span><i class="fas fa-user"></i> By <%= bookmark.post.user.name %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>