<%= render 'public/users/info', user: @user %>

<div class="container">
  <div class="row">
    <div class="col text-center">
      <% if @user == current_user %>
        <%= link_to user_path(@user), class: "btn btn-sm" do %>
          <i class="fas fa-shoe-prints"></i>投稿
        <% end %>
        |
        <%= link_to user_bookmarks_path(current_user), class: "btn btn-sm text-secondary" do %>
          <i class="fas fa-bookmark"></i>ブックマーク
        <% end %>
      <% else %>
        <%= link_to user_path(@user), class: "btn btn-sm" do %>
          <i class="fas fa-shoe-prints"></i>投稿
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="card-group py-3">
      <% @posts.each do |post| %>
        <div class="col-4">
          <div class="card w-100 mx-auto mt-4 shadow-lg">
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_post_image, class:"card-img-top"; %>
            <% end %>
            <div class="card-body">
              <div class="row">
                <div class="col-3">
                  <%= image_tag post.user.get_profile_image, size: '50x50', class:"mt-3 rounded-circle"; %>
                </div>
                <div class="col-9">
                  <p class="card-title">
                    <%= link_to(post_path(post.id), class:"text-dark") do %>
                      <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
                    <% end %>
                  </p>
                  <span><i class="fas fa-user"></i> By <%= post.user.name %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>