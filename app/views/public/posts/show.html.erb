<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(@post.id), method: :delete, remote: true do %>
    ♥<%= post.favorites.count %>いいね
  <% end %>
<% else %>
  <%= link_to post_favorites_path(@post.id), method: :post, remote: true  do %>
    ♡<%= post.favorites.count %>いいね
  <% end %>
<% end %>

<% if post.bookmarked_by?(current_user) %>
  <%= link_to post_bookmarks_path(@post.id), method: :delete, remote: true do %>
    <i class="fas fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to post_bookmarkes_path(@post.id), method: :post, remote: true  do %>
    <i class="far fa-bookmark"></i>
  <% end %>
<% end %>