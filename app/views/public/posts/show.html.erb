
<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_path(@post.id) do %>
      <%= image_tag @post.get_post_image(100, 100), class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(@post.user.id) do%>
            <%= image_tag @post.user.get_profile_image(100, 100), class:"mt-3 rounded-circle"; %>
          <% end %>
        </div>
        <div class="col-10">
          <% if @post.favorited_by?(current_user) %>
            <%= link_to post_favorites_path(@post.id), method: :delete, remote: true do %>
              ♥<%= @post.favorites.count %>
            <% end %>
          <% else %>
            <%= link_to post_favorites_path(@post.id), method: :post, remote: true  do %>
              ♡<%= @post.favorites.count %>
            <% end %>
          <% end %>

          <% if @post.bookmarked_by?(current_user) %>
            <%= link_to post_bookmarks_path(@post.id), method: :delete, remote: true do %>
              <i class="fas fa-bookmark"></i>
            <% end %>
          <% else %>
            <%= link_to post_bookmarks_path(@post.id), method: :post, remote: true  do %>
              <i class="far fa-bookmark"></i>
            <% end %>
          <% end %>
          <p class="card-title">
            <%= link_to(post_path(@post.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= @post.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= @post.caption %></p>
          <span><i class="fas fa-user"></i> By <%= @post.user.user_name %></span>
        </div>
      </div>
    </div>
  </div>
</div>