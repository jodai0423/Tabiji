<div class="container my-3 w-100">
  <div class="row">
    <div class="col-6 mx-auto">
      <p>いいね数ランキング</p>
      <table>
        <% @post_like_ranks.each.with_index(1) do |post, i| %>
        <div class="row">
          <div class="col-12">
            <tr>
              <td class="col-2">第<%= i %>位</td>
              <td class="col-3"><%= image_tag post.user.get_profile_image(80, 80), class:"mt-3 rounded-circle"; %></td>
              <td class="col-3">
                <%= link_to post_path(post.id) do %>
                  <%= post.title %>
                <% end %>
              </td>
              <td class="col-4"><span>いいね数：<%= post.favorites.count %></span></td>
            </tr>
          </div>
        </div>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-6 pt-3 mt-3 mx-auto border-top">
      <p>コメント数ランキング</p>
      <table>
        <% @post_comment_ranks.each.with_index(1) do |post, i| %>
        <div class="row">
          <div class="col-12">
            <tr>
              <td class="col-2">第<%= i %>位</td>
              <td class="col-3"><%= image_tag post.user.get_profile_image(80, 80), class:"mt-3 rounded-circle"; %></td>
              <td class="col-3">
                <%= link_to post_path(post.id) do %>
                  <%= post.title %>
                <% end %>
              </td>
              <td class="col-4"><span>コメント数：<%= post.post_comments.count %></span></td>
            </tr>




          </div>
        </div>
        <% end %>
      </table>
    </div>
  </div>
</div>